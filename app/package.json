{
  "name": "@spec-explorer/vscode",
  "displayName": "Spec Explorer",
  "description": "Native VS Code Testing Support for ANY test framework",
  "version": "0.0.1",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.specs.yml",
    "workspaceContains:**/.specs.yaml",
    "workspaceContains:**/.specs.json"
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "build": "webpack",
    "clean": "del tsconfig.tsbuildinfo && rd /s /q dist",
    "clean-build": "pnpm run clean && pnpm run build",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@spec-explorer/extension": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}